nn(argument-7, freedom-6)
nsubjpass(used-10, argument-7)
aux(used-10, could-8)
auxpass(used-10, be-9)
ccomp(argues-2, used-10)
det(format-13, any-12)
prep_in(used-10, format-13)
aux(justify-15, to-14)
