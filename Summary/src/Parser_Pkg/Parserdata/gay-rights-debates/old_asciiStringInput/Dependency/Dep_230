amod(marriage-8, gay-7)
dobj(allowing-6, marriage-8)
mark(occurs-13, if-10)
det(divorce-12, a-11)
nsubj(occurs-13, divorce-12)
advcl(allowing-6, occurs-13)
det(state-15, the-14)
nsubj(have-17, state-15)
aux(have-17, would-16)
ccomp(states-2, have-17)
aux(care-19, to-18)
xcomp(have-17, care-19)
det(partner-23, the-21)
amod(partner-23, dependent-22)
